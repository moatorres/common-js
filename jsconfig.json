{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "checkJs": true,
    "strictNullChecks": true,
    "paths": {
      "@core/*": ["./src/core/*"],
      "@user/*": ["./src/core/user*"],
      "@domain/*": ["./src/domain/*"],
      "@errors/*": ["./src/errors/*"],
      "@http/*": ["./src/http/*"],
      "@express/*": ["./src/http/express/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "coverage"
  ],
}
